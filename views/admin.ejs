<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Portal</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    /* Custom CSS for Admin Portal */
    .admin-header {
      border-top: 5px solid blue; /* Line at the top */
      padding: 20px 0;
      text-align: center;
    }

    .admin-buttons {
      margin-top: 50px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="admin-header">
      <h1>Welcome to Admin Portal</h1>
    </div>
    <div class="admin-buttons text-center">
      <div class="row justify-content-center">
        <div class="col-md-3 mb-3">
          <a href="/search_source" class="btn btn-primary btn-lg btn-block">Search by Source</a>
        </div>
        <div class="col-md-3 mb-3">
          <a href="/search_destination" class="btn btn-secondary btn-lg btn-block">Search by Destination</a>
        </div>
        <div class="col-md-3 mb-3">
          <a href="/search_date" class="btn btn-success btn-lg btn-block">Search by Date</a>
        </div>
        <!-- <div class="col-md-3 mb-3">
          <a href="/view_passengers" class="btn btn-info btn-lg btn-block">View All Passengers</a>
        </div> -->
      </div>
    </div>
  </div>

  <!-- Bootstrap JS and jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
